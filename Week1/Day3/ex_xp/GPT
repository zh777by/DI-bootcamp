user_input = input("please, write a word :")
letter_index_dict = {}

 # Iterate over each character and its index in the word
for index, char in enumerate(user_input):
     # If the character is not in the dictionary, add it with the current index
    if char not in letter_index_dict:
            letter_index_dict[char] = [index]
    else:
         # If the character is already in the dictionary, append the current index to its list
        letter_index_dict[char].append(index)
        print(letter_index_dict)


